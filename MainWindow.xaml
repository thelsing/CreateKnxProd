<Window x:Class="CreateKnxProd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateKnxProd"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBarTray>
            <ToolBar>
                <Button Content="Neu" Command="{Binding CreateNewCommand}"/>
                <Button Content="Öffnen" Command="{Binding OpenCommand}"/>
                <Button Content="Schließen" Command="{Binding CloseCommand}"/>
                <Button Content="Speichern" Command="{Binding SaveCommand}"/>
                <Button Content="Exportieren" Command="{Binding ExportCommand}"/>
            </ToolBar>
        </ToolBarTray>
        <TabControl Grid.Row="1">
            <TabItem Header="Allgemein">
                
            </TabItem>
            <TabItem Header="Parametertypen">
                
            </TabItem>
            <TabItem Header="Parameter">
                
            </TabItem>
            <TabItem Header="Kommunikationsobject">
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
